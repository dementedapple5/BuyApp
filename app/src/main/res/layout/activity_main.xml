<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dani.buyapp.MainActivity">


    <ImageView
        android:id="@+id/iv_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/iv_android"
        android:text="Android"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_qty_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/tv_stock"
        android:ems="3"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_qty_buy"
        android:layout_alignBottom="@+id/et_qty_buy"
        android:layout_alignStart="@+id/tv_name"
        android:text="25"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="16dp"
        android:text="Buy" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_buy"
        android:layout_alignBottom="@+id/btn_buy"
        android:layout_alignEnd="@+id/tv_stock"
        android:text="Cancel" />

    <Spinner
        android:id="@+id/sp_num_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_stock"
        android:layout_marginStart="44dp"
        android:layout_toEndOf="@+id/et_qty_buy" />
</RelativeLayout>
